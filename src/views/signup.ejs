<%- include('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/signup.css" />

<body>
  <div class="signup-container">
    <form onsubmit="return validateSignupForm()" action="/admin/signup" method="POST" >
      <div class="signup-frame" style="width: 650px">
        <div class="signup-top">
          <span>Signup</span>
          <div>Go back <a href="/admin" style="color: #7258e6">Home</a></div>
          <p>
            Already signed up?
            <a href="/admin/login" style="color: #6440fb">Login</a>
          </p>
        </div>

        <div class="sign-input-frame" style="justify-content: space-between">
          <div class="sign-up-frame">
            <label>Motorcycle Dealership *</label>
            <input
              type="text"
              name="memberNick"
              class="member-nick"
              placeholder="Username"
              value=""
            />
          </div>
          <div class="sign-up-frame">
            <label>Phone *</label>
            <input
              type="text"
              name="memberPhone"
              class="member-phone"
              placeholder="Phone"
              value=""
            />
          </div>
        </div>
        <div class="sign-input-frame" style="justify-content: space-between">
          <div class="sign-up-frame">
            <label>Password *</label>
            <input
              type="password"
              name="memberPassword"
              class="member-password"
              placeholder="Password"
              value=""
            />
          </div>
          <div class="sign-up-frame">
            <label>Repeat password *</label>
            <input
              type="password"
              name="confirmPassword"
              class="confirm-password"
              placeholder="Repeat password"
              value=""
            />
          </div>
        </div>
        <div class="sign-input-frame" style="justify-content: center">
          <div class="sign-up-frame">
            <label>Email *</label>
            <input
              type="email"
              name="memberEmail"
              class="member-email"
              placeholder="Email"
              required
              value=""
            />
          </div>
        </div>
        <input name="memberType" value="MOTO" hidden />

        <button class="signup-btn btn" name="signup" type="submit">
          Signup
        </button>
      </div>
    </form>
  </div>

 <script type="text/javascript" src="/js/signup.js"></script> 
</body>

<%- include('includes/footer') %>
